@model List<IOCL_Training_Module.Models.Completed>

@{
    ViewData["Title"] = "Completed Trainings";
    string selectedEmpNo = ViewBag.SelectedEmpNo as string ?? "Unknown";
}

<div class="container mt-4">
    <h2>Completed Trainings</h2>
    <h5>Employee No: @selectedEmpNo</h5>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Training ID</th>
                    <th>Training Name</th>
                    <th>From Date</th>
                    <th>To Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var training in Model)
                {
                    <tr>
                        <td>@training.CompletedTraining</td>
                        <td>@training.Training?.TrainingName</td>
                        <td>@training.FromDate.ToShortDateString()</td>
                        <td>@training.ToDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No completed trainings found for the selected employee.</p>
    }

    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Back to Dashboard</a>
</div>
