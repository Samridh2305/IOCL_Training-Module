<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            background-color: #f9f9f9;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #1a1a3d;
            color: white;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
            transition: width 0.3s ease-in-out;
            overflow: hidden;
        }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                transition: 0.3s;
                white-space: nowrap;
                overflow: hidden;
            }

            .sidebar.collapsed a {
                justify-content: center;
                font-size: 0; /* Hide text */
            }

                .sidebar.collapsed a::before {
                    font-size: 18px; /* Show icons only */
                }

            .sidebar a:hover {
                background: #2e2e5e;
            }

            .sidebar .iocllogo {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 10px;
            }

                .sidebar .iocllogo img {
                    width: 80px;
                    height: auto;
                }

            .sidebar.collapsed .iocllogo img {
                width: 40px; /* Smaller logo */
            }

        /* Sidebar Toggle Button (Arrow) */
        .sidebar-toggle {
            position: absolute;
            top: 50%;
            left: 250px;
            transform: translateY(-50%);
            background: #1a1a3d;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 0 5px 5px 0;
            transition: left 0.3s ease-in-out;
        }

        .sidebar.collapsed + .sidebar-toggle {
            left: 60px;
        }

        /* Content */
        .content {
            margin-left: 270px;
            padding: 20px;
            width: calc(100% - 270px);
            transition: margin-left 0.3s ease-in-out;
        }

        .sidebar.collapsed ~ .content {
            margin-left: 80px;
            width: calc(100% - 80px);
        }

        /* Signout Button */
        .signout-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #dc3545;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .signout-btn:hover {
                background: #c82333;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="iocllogo">
            <img src="~/images/IOCL Logo high res.png" alt="IOCL Logo">
        </div>
        <h3 class="text-center">IOCL</h3>
        <a asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        <a asp-area="" asp-controller="Employee" asp-action="Index">Employee</a>
        <a asp-area="" asp-controller="Training" asp-action="Index">Training</a>
        <a asp-area="" asp-controller="Dashboard" asp-action="Completed">Completed Trainings</a>
        <a asp-area="" asp-controller="Dashboard" asp-action="NotCompleted">Not Completed Trainings</a>
        <a asp-area="" asp-controller="TrainingStatus" asp-action="Index">Training Status Section</a>
    </div>

    <!-- Sidebar Toggle Button -->
    <button class="sidebar-toggle">&#9664;</button> <!-- Unicode left arrow -->
    <!-- Signout Button -->
    <a asp-area="" asp-controller="Account" asp-action="Logout" class="signout-btn">Sign Out</a>

    <!-- Main Content -->
    <div class="container content">
        @RenderBody()
    </div>

    <script>
        $(document).ready(function () {
            $(".sidebar-toggle").click(function () {
                $(".sidebar").toggleClass("collapsed");
                $(".content").toggleClass("shifted");

                // Change arrow direction
                if ($(".sidebar").hasClass("collapsed")) {
                    $(".sidebar-toggle").html("&#9654;"); // Right arrow
                } else {
                    $(".sidebar-toggle").html("&#9664;"); // Left arrow
                }
            });
        });
    </script>

</body>
</html>
