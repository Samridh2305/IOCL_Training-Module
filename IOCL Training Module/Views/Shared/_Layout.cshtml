<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #1a1a3d;
            color: white;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: #2e2e5e;
                }

                .sidebar a i {
                    margin-right: 10px;
                }

        /* Content */
        .content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
        }

        /* Signout Button */
        .signout-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #dc3545;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .signout-btn:hover {
                background: #c82333;
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="text-center">Acme</h3>
        <a asp-area="" asp-controller="Dashboard" asp-action="Index">
            <i class="fas fa-th"></i> Dashboard
        </a>
        <a asp-area="" asp-controller="Employee" asp-action="Index">
            <i class="fas fa-user"></i> Employee
        </a>
        <a asp-area="" asp-controller="Training" asp-action="Index">
            <i class="fas fa-calendar-alt"></i> Training
        </a>
        <a asp-area="" asp-controller="Dashboard" asp-action="Completed" class="btn btn-success m-2">
            Completed Trainings
        </a>
        <a asp-area="" asp-controller="Dashboard" asp-action="NotCompleted" class="btn btn-warning m-2">
            Not Completed Trainings
        </a>
        <a asp-area="" asp-controller="TrainingStatus" asp-action="Index" class="btn btn-info m-2">
            Training Status Section
        </a>
    </div>

    <!-- Signout Button -->
    <a asp-area="" asp-controller="Account" asp-action="Logout" class="signout-btn">Sign Out</a>

    <!-- Main Content -->
    <div class="container content">
        @RenderBody()
    </div>
</body>
</html>
