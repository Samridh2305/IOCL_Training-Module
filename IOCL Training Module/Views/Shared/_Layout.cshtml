<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            background-color: #f9f9f9;
            margin: 0; /* Ensure no default margin */
            overflow-x: hidden; /* Prevent horizontal scroll */
        }

        /* Left Sidebar (Existing) */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #1a1a3d;
            color: white;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
            transition: width 0.3s ease-in-out;
            overflow: hidden;
        }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                transition: 0.3s;
                white-space: nowrap;
                overflow: hidden;
            }

            .sidebar.collapsed a {
                justify-content: center;
                font-size: 0; /* Hide text */
            }

                .sidebar.collapsed a::before {
                    font-size: 18px; /* Show icons only */
                }

            .sidebar a:hover {
                background: #2e2e5e;
            }

            .sidebar .iocllogo {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 10px;
            }

                .sidebar .iocllogo img {
                    width: 80px;
                    height: auto;
                }

            .sidebar.collapsed .iocllogo img {
                width: 40px; /* Smaller logo */
            }

        /* Left Sidebar Toggle Button (Arrow) */
        .sidebar-toggle {
            position: absolute;
            top: 50%;
            left: 250px;
            transform: translateY(-50%);
            background: #1a1a3d;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 0 5px 5px 0;
            transition: left 0.3s ease-in-out;
        }

        .sidebar.collapsed + .sidebar-toggle {
            left: 60px;
        }

        /* Right Sidebar */
        .right-sidebar {
            width: 250px;
            height: 100vh;
            background: #2c2c2c;
            color: white;
            padding: 20px;
            position: fixed;
            right: -250px; /* Hidden by default */
            top: 0;
            transition: right 0.3s ease-in-out;
            z-index: 1000;
        }

            .right-sidebar.active {
                right: 0;
            }

            .right-sidebar p {
                margin: 10px 0;
                font-size: 16px;
            }

            .right-sidebar h4 {
                margin-bottom: 15px;
            }

        /* Right Sidebar Toggle Button */
        .right-sidebar-toggle {
            position: absolute;
            top: 50px; /* Positioned below the sign-out button */
            right: 10px;
            background: #2c2c2c;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            z-index: 1001;
        }

            .right-sidebar-toggle:hover {
                background: #3d3d3d;
            }

        /* Content */
        .content {
            margin-left: 270px;
            margin-right: 0; /* Default margin-right */
            padding: 20px;
            width: calc(100% - 270px); /* Adjust width based on left sidebar */
            transition: all 0.3s ease-in-out;
            box-sizing: border-box;
        }

        /* Adjust content when left sidebar is collapsed */
        .sidebar.collapsed ~ .content {
            margin-left: 80px;
            width: calc(100% - 80px);
        }

        /* Adjust content when right sidebar is active */
        .right-sidebar.active ~ .content {
            margin-right: 250px;
            width: calc(100% - 270px - 250px); /* Adjust for both sidebars */
        }

        /* Adjust content when both left sidebar is collapsed and right sidebar is active */
        .sidebar.collapsed ~ .right-sidebar.active ~ .content {
            margin-left: 80px;
            margin-right: 250px;
            width: calc(100% - 80px - 250px);
        }

        /* Signout Button */
        .signout-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #dc3545;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            z-index: 999; /* Above right sidebar */
        }

            .signout-btn:hover {
                background: #c82333;
            }

        /* Calendar styling */
        .calendar-container {
            margin-top: 20px;
            font-size: 12px; /* Reduced base font size */
        }

        .calendar {
            width: 100%;
            background: #3d3d3d;
            padding: 5px; /* Reduced padding */
            border-radius: 5px;
            color: white;
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 5px; /* Reduced margin */
            font-size: 14px; /* Slightly larger than dates for readability */
        }

        .calendar-body table {
            width: 100%;
            border-collapse: collapse;
        }

        .calendar-body th, .calendar-body td {
            text-align: center;
            padding: 3px; /* Reduced padding */
            font-size: 12px; /* Smaller font size for dates */
        }

        .calendar-body td {
            cursor: pointer;
        }

            .calendar-body td.today {
                background: #007bff;
                border-radius: 50%;
            }

            .calendar-body td:hover {
                background: #555;
            }
    </style>
</head>
<body>
    <!-- Left Sidebar -->
    <div class="sidebar">
        <h3 class="text-center">IOCL</h3>
        <a asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        <a asp-area="" asp-controller="Employee" asp-action="Index">Employee</a>
        <a asp-area="" asp-controller="Training" asp-action="Index">Training</a>
        <a asp-area="" asp-controller="Dashboard" asp-action="Completed">Completed Trainings</a>
        <a asp-area="" asp-controller="Dashboard" asp-action="NotCompleted">Not Completed Trainings</a>
        <a asp-area="" asp-controller="TrainingStatus" asp-action="Index">Training Status Section</a>
        <a asp-area="" asp-controller="Completed" asp-action="Index">Trainings</a>
    </div>

    <!-- Left Sidebar Toggle Button -->
    <button class="sidebar-toggle">◀</button>

    <!-- Signout Button -->
    <a asp-area="" asp-controller="Account" asp-action="Logout" class="signout-btn">Sign Out</a>

    <!-- Right Sidebar Toggle Button -->
    <button class="right-sidebar-toggle">☰</button>

    <!-- Right Sidebar -->
    <div class="right-sidebar">
        <h4>Employee Details</h4>
        
        <p><strong>Name:</strong> @Context.Session.GetString("Name")</p>
        <p><strong>ID:</strong> @Context.Session.GetString("EmpNo")</p>
        <div class="calendar-container">
            <div class="calendar">
                <div class="calendar-header">
                    <span id="month-year"></span>
                </div>
                <div class="calendar-body">
                    <table>
                        <thead>
                            <tr>
                                <th>Sun</th>
                                <th>Mon</th>
                                <th>Tue</th>
                                <th>Wed</th>
                                <th>Thu</th>
                                <th>Fri</th>
                                <th>Sat</th>
                            </tr>
                        </thead>
                        <tbody id="calendar-dates"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container content">
        @RenderBody()
    </div>

    <script>
        $(document).ready(function () {
            // Left sidebar toggle
            $(".sidebar-toggle").click(function () {
                $(".sidebar").toggleClass("collapsed");
                if ($(".sidebar").hasClass("collapsed")) {
                    $(".sidebar-toggle").html("▶"); // Right arrow
                } else {
                    $(".sidebar-toggle").html("◀"); // Left arrow
                }
            });

            // Right sidebar toggle
            $(".right-sidebar-toggle").click(function () {
                $(".right-sidebar").toggleClass("active");
                $(this).text($(".right-sidebar").hasClass("active") ? "✕" : "☰");
            });

            // Calendar generation
            function generateCalendar() {
                const today = new Date();
                const month = today.getMonth();
                const year = today.getFullYear();

                const months = [
                    "January", "February", "March", "April", "May", "June",
                    "July", "August", "September", "October", "November", "December"
                ];
                $("#month-year").text(`${months[month]} ${year}`);

                const firstDay = new Date(year, month, 1).getDay();
                const daysInMonth = new Date(year, month + 1, 0).getDate();

                let html = "";
                let day = 1;

                for (let i = 0; i < 6; i++) { // 6 rows for the calendar
                    html += "<tr>";
                    for (let j = 0; j < 7; j++) {
                        if (i === 0 && j < firstDay) {
                            html += "<td></td>";
                        } else if (day > daysInMonth) {
                            html += "<td></td>";
                        } else {
                            const isToday = day === today.getDate() && month === today.getMonth() && year === today.getFullYear();
                            html += `<td class="${isToday ? 'today' : ''}">${day}</td>`;
                            day++;
                        }
                    }
                    html += "</tr>";
                    if (day > daysInMonth) break;
                }

                $("#calendar-dates").html(html);
            }

            // Initialize calendar
            generateCalendar();

            // Optional: Update calendar daily (e.g., at midnight)
            setInterval(generateCalendar, 24 * 60 * 60 * 1000); // Update every 24 hours
        });
    </script>
</body>
</html>