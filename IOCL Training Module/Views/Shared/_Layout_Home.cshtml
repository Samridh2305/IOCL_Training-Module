<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your App</title>
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true">
</head>
<body>
    <header>
        <img src="~/images/IOCL Logo high res.png" alt="Indian Oil Logo" class="logo">
    </header>
    
    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Your Company</p>
    </footer>
</body>
</html>
