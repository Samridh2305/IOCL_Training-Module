@model IOCL_Training_Module.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<h2>Create Employee</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EmpNo"></label>
        <input asp-for="EmpNo" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="FatherName"></label>
        <input asp-for="FatherName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmpDepartment"></label>
        <input asp-for="EmpDepartment" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="EmpDesignation"></label>
        <input asp-for="EmpDesignation" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Sex"></label>
        <select asp-for="Sex" class="form-control">
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Reporting"></label>
        <select asp-for="Reporting" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ControllingEmp"></label>
        <input asp-for="ControllingEmp" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Create</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
