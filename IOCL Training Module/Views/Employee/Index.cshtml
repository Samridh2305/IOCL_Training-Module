@model IEnumerable<IOCL_Training_Module.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Employee</a>

<table class="table">
    <thead>
        <tr>
            <th>Emp No</th>
            <th>Name</th>
            <th>Father's Name</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Sex</th>
            <th>Supervisor</th>
            <th>SupervisorNo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmpNo</td>
                <td>@emp.Name</td>
                <td>@emp.FatherName</td>
                <td>@emp.EmpDepartment</td>
                <td>@emp.EmpDesignation</td>
                <td>@emp.Sex</td>
                <td>@(emp.Reporting ? "Yes" : "No")</td>
                <td>@emp.ControllingEmp</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.EmpNo" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.EmpNo" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
