@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="login-box">
            <div class="logo">
                <img src="~/images/IOCL Logo high res.png" alt="IOCL Logo">
            </div>

            <h2>Reset Password</h2>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" name="EmpNo" placeholder="Employee Number" required />
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" name="NewPassword" placeholder="New Password" required />
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm Password" required />
                </div>
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </form>

            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
