@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - IOCL Training Track Record</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="header">
        <h1>IOCL Training Track Record</h1>
    </div>

    <div class="white-box">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-12">
                    <div class="logo-section">
                        <img src="~/Images/Training.jpg" alt="Training Logo" class="logo" />
                        <p class="slogan">Training Management Track Record</p>
                        <p class="refinery">Gujarat Refinery</p>
                        <div class="footer-logos">
                            <img src="~/Images/IOCL Logo high res.png" alt="IndianOil Logo" />
                            <img src="~/Images/IOCL brand mascot.png" alt="Gujarat Refinery Logo" />
                        </div>
                    </div>
                </div>
                <div class="col-md-8 col-sm-12">
                    <div class="login-box">
                        <div class="instruction">
                            <span>» Enter Emp Id and Password</span>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }

                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label for="EmpNo">Emp ID</label>
                                <input type="text" class="form-control" id="EmpNo" name="EmpNo" required />
                            </div>
                            <div class="mb-3">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" id="Password" name="Password" required />
                            </div>
                            <div class="form-group buttons">
                                <button type="submit" class="btn btn-primary login-btn">Log in</button>
                                <button type="button" class="btn btn-secondary clear-btn" onclick="document.querySelector('form').reset();">Clear</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-logos">
                <p>2025 | Developed & Maintained by IS Department | Gujarat Refinery | IndianOil Corporation Ltd.</p>
                <p>Use Internet Explorer V 9 & Above for better UI experience.</p>
                <div class="footer-logos-right">
                    <img src="~/Images/IOCL brand mascot.png" alt="Gujarat Refinery Logo" />
                    <img src="~/Images/IOCL Logo high res.png" alt="IndianOil Logo" />
                </div>
            </div>
        </div>
    </footer>
</body>
</html>